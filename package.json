    "papaparse": "^5.5.2",
    "ramda": "0.27.1",
    "soundex-code": "0.1.2",
    "spin.js": "2.3.2",
    "tinycolor2": "1.1.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
